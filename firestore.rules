rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the events collection
    match /events/{eventId} {
      // A user can read, write, and delete their own event document.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // A user can query the events collection only if they are filtering by their own user ID.
      // This is crucial for the main dashboard to load events.
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      
      // Rules for the expenses subcollection
      match /expenses/{expenseId} {
        // A user can do anything with an expense document (read, write, delete)
        // only if they own the parent event.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
