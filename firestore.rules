rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /events/{eventId} {
      // Allow users to create an event if they are the owner
      allow create: if isOwner(request.resource.data.userId);

      // Allow users to read, update, or delete their own events
      allow get, update, delete: if isOwner(resource.data.userId);

      // Allow users to query the list of their own events
      allow list: if request.auth != null && request.query.filters.map(f => f[0]).hasOnly(['userId']) && request.query.filters.map(f => f[2]).hasOnly([request.auth.uid]);

      match /expenses/{expenseId} {
        // Allow read/write on expenses only if the user owns the parent event
        allow read, write: if isOwner(get(/databases/$(database)/documents/events/$(eventId)).data.userId);
      }
    }
  }
}