rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can only access events that belong to them.
    // The event document must have a `userId` field that matches the user's UID.
    match /events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Rules for the expenses subcollection.
      // A user can only access expenses for an event they own.
      match /expenses/{expenseId} {
      	allow read, write: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
