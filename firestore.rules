
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to only read, write, and delete their own events
    match /events/{eventId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Allow users to manage expenses only for events they own
      match /expenses/{expenseId} {
        allow read, list, create, update, delete: if get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
