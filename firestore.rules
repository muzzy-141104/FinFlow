rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // A user can create an event if they are logged in and the event's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete an event if they own it.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      match /expenses/{expenseId} {
        // A user can create/update/delete an expense if they own the parent event.
        allow write: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
        
        // A user can read an expense if they own the parent event.
        allow read: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
