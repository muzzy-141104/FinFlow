rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events can be read, updated, or deleted only by the user who owns them.
    // New events can be created only if the userId on the new event matches the creator's UID.
    match /events/{eventId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Expenses can be accessed only by authenticated users who own the parent event.
      match /expenses/{expenseId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
