rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Users can only create events for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can only read, update, or delete their own events.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // A user can list events, but the client MUST apply a where() clause to filter by userId.
      // This rule ensures that only authenticated users can even attempt to list events.
      allow list: if request.auth != null;

      // Rules for the expenses subcollection.
      match /expenses/{expenseId} {
        // A user can read/write expenses only if they own the parent event.
      	allow read, write: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.userId == request.auth.uid;
      }
    }
  }
}
